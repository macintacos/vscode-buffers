{
  "name": "buffers",
  "displayName": "Buffers",
  "description": "Vim-like buffer lists in VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "buffers.showOpenBuffers",
        "title": "Show Open Buffers"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Buffers",
      "properties": {
        "buffers.showPreviewsDuringNavigation": {
          "type": "boolean",
          "default": true,
          "description": "Show file previews in the editor group while navigating the quick pick list."
        },
        "buffers.alphabeticalOrder": {
          "type": "boolean",
          "default": false,
          "description": "Sort quick pick file list alphabetically. If false, the current file is moved to the top."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "git-cliff": "^2.8.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
  "dependencies": {
    "regex": "^6.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "keytar"
    ]
  }
}
